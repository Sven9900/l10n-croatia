<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_account_account_template_tree" model="ir.actions.act_window">
        <field name="name">Account Account template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.account.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_account_tax_template_tree" model="ir.actions.act_window">
        <field name="name">Account Tax template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.tax.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_account_fp_template_tree" model="ir.actions.act_window">
        <field name="name">Account FP template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.fiscal.position.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Templates" id="menu_templates" parent="account.account_account_menu"
              groups="account.group_account_user">
        <menuitem name="Account" id="menu_tmpl_acc" action="action_account_account_template_tree" groups="account.group_account_user"/>
        <menuitem name="Account group" id="menu_tmpl_tax" action="action_account_tax_template_tree" groups="account.group_account_user"/>
        <menuitem name="Fiscal position" id="menu_tmpl_fp" action="action_account_fp_template_tree" groups="account.group_account_user"/>
    </menuitem>

    <record id="journal_show_on_dashboard" model="ir.ui.view">
        <field name="name">journal_show_on_dashboard</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_tree"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="show_on_dashboard" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
