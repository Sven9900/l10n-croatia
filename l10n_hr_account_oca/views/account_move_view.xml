<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_l10n_hr_form" model="ir.ui.view">
        <field name="name">view_move_l10n_hr_form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <field name="partner_id" position="after">
                <field name="l10n_hr_fiskal_uredjaj_id" widget="selection"
                       attrs="{'required':[('move_type','in',['out_invoice','out_refund'])],
                               'invisible':['|', ('country_code','!=', 'HR'),
                                ('move_type','not in',['out_invoice','out_refund'])
                               ]}"/>
                <field name="l10n_hr_nacin_placanja"
                       attrs="{'required':[('move_type','in',['out_invoice','out_refund'])],
                               'invisible':['|', ('country_code','!=', 'HR'),
                                ('move_type','not in',['out_invoice','out_refund'])
                               ]}"/>
            </field>
            <field name="invoice_date" position="after">
                <field name="date_delivery"/>
            </field>
            <notebook position="inside">
                <page string="Croatia Fiskal data" name="croatia"
                      attrs="{'invisible':['|', ('country_code','!=', 'HR'),
                                ('move_type','not in',['out_invoice','out_refund'])
                               ]}">
                    <group colspan="4" col="4">
                        <field name="date_document" /> <!-- do i need it? -->
                        <field name="l10n_hr_vrijeme_izdavanja" readonly="1"/>
                        <field name="l10n_hr_fiskalni_broj" readonly="1"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>


